<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.RefundMapper">

    <select id="getRefundById" resultType="com.zb.pojo.Refund">
        select
                id as id,
                orderid as orderid,
                state as state,
                details as details,
                address as address,
                businessid as businessid,
                userid as userid,
                yuanyin as yuanyin
        from refund
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getRefundListByMap" resultType="com.zb.pojo.Refund" >
        select
                id as id,
                orderid as orderid,
                state as state,
                details as details,
                address as address,
                businessid as businessid,
                userid as userid,
               yuanyin as yuanyin
        from refund
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="orderid != null and orderid!=''">
                    and orderid=#{orderid}
                </if>
                <if test="state != null and state!=''">
                    and state=#{state}
                </if>
                <if test="details != null and details!=''">
                    and details=#{details}
                </if>
                <if test="address != null and address!=''">
                    and address=#{address}
                </if>
                <if test="businessid != null and businessid!=''">
                    and businessid=#{businessid}
                </if>
                <if test="userid != null and userid!=''">
                    and userid=#{userid}
                </if>
            <if test="yuanyin != null and yuanyin!=''">
                and yuanyin=#{yuanyin}
            </if>
        </trim>
        <if test="index != null and size != null ">
            limit ${index},${size }
        </if>
    </select>

    <select id="getRefundCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from refund
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="orderid != null and orderid!=''">
                    and orderid=#{orderid}
                </if>
                <if test="state != null and state!=''">
                    and state=#{state}
                </if>
                <if test="details != null and details!=''">
                    and details=#{details}
                </if>
                <if test="address != null and address!=''">
                    and address=#{address}
                </if>
                <if test="businessid != null and businessid!=''">
                    and businessid=#{businessid}
                </if>
                <if test="userid != null and userid!=''">
                    and userid=#{userid}
                </if>
            <if test="yuanyin != null and yuanyin!=''">
                and yuanyin=#{yuanyin}
            </if>
        </trim>
    </select>

    <insert id="insertRefund" parameterType="com.zb.pojo.Refund">
        insert into refund(
                        id,
                        orderid,
                        state,
                        details,
                        address,
                        businessid,
                        userid,
                        yuanyin)
        values(
                      null ,
                     #{orderid},
                     #{state},
                     #{details},
                     #{address},
                     #{businessid},
                    #{userid},
                     #{yuanyin})
    </insert>

    <update id="updateRefund" parameterType="com.zb.pojo.Refund">
        update refund
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="orderid != null and orderid!=''">
                            orderid=#{orderid},
                        </if>
                        <if test="state != null and state!=''">
                            state=#{state},
                        </if>
                        <if test="details != null and details!=''">
                            details=#{details},
                        </if>
                        <if test="address != null and address!=''">
                            address=#{address},
                        </if>
                        <if test="businessid != null and businessid!=''">
                            businessid=#{businessid},
                        </if>
                        <if test="userid != null and userid!=''">
                            userid=#{userid}
                        </if>
                       <if test="yuanyin != null and yuanyin!=''">
                           yuanyin=#{yuanyin}
                       </if>
        </trim>
    </update>
</mapper>